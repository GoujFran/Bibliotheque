<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ensai.bibliotheque.FicheFilm">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre"
        android:id="@+id/fTitre"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textAlignment="center"
        android:background="@android:color/holo_purple"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de sortie :"
        android:id="@+id/fDate"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réalisateur :"
        android:id="@+id/fRéalisateur"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acteurs :"
        android:id="@+id/fActeurs"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays :"
        android:id="@+id/fPays"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre :"
        android:id="@+id/fGenre"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Résumé :"
        android:id="@+id/fResume"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rated :"
        android:id="@+id/fRated"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durée :"
        android:id="@+id/fDuree"
        android:paddingBottom="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récompenses :"
        android:id="@+id/fAwards"
        android:paddingBottom="15sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster"/>



</LinearLayout>
